<Window x:Class="PhoneWarehouseManagement.Views.PurchaseOrderDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneWarehouseManagement.Views"
        mc:Ignorable="d"
        Title="PurchaseOrderDetails" Height="400" Width="450">
    <Grid>
        <ListView  x:Name="lvDetail">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Phone Name" DisplayMemberBinding="{Binding Phone.ModelName }"  Width="auto"></GridViewColumn>
                    <GridViewColumn Header="Quantity" DisplayMemberBinding="{Binding Quantity }"  Width="auto"></GridViewColumn>
                    <GridViewColumn Header="Unit Price" DisplayMemberBinding="{Binding Price }"  Width="auto"></GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
